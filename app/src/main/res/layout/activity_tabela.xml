    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tabela"
    android:stretchColumns="*"
    android:background="#000000">

    <TableRow android:layout_marginTop="10pt"
        android:layout_marginBottom="10dp">
        <ImageView android:src="@drawable/onibus" />
        <ImageView android:src="@drawable/aviao"/>
        <ImageView android:src="@drawable/bairros"/>
    </TableRow>

    <TableRow android:layout_marginTop="10pt"
        android:layout_marginBottom="10dp">
        <ImageView android:src="@drawable/turismo"/>
        <ImageView android:src="@drawable/telefone"/>
        <ImageView android:src="@drawable/taxi"/>
    </TableRow>

    <TableRow android:layout_marginTop="10pt"
        android:layout_marginBottom="10dp">>
        <ImageView android:src="@drawable/cultura"/>
        <ImageView android:src="@drawable/feriados"/>
        <ImageView android:src="@drawable/sac"/>
    </TableRow>

</TableLayout>